{
  "name": "pcassignment",
  "version": "1.0.0",
  "description": "Sr API and QA Engineer Technical Assessment Test",
  "main": "index.js",
  "scripts": {
    "clean": "npm run clean:results && npm run clean:report",
    "clean:results": "rm -rf allure-results",
    "clean:report": "rm -rf allure-report",
    "postinstall": "selenium-standalone install",
    "seleniumstart": "selenium-standalone start",
    "test": "mocha ./src/test/assignment_suite.js",
    "testapi": "mocha ./src/test/api/api_test_suite.js",
    "testweb": "mocha ./src/test/web/web_test_suite.js",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "author": "asokhi",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "allure-commandline": "^2.13.8",
    "assert": "^2.0.0",
    "axios": "^0.21.1",
    "mocha": "^8.4.0",
    "mocha-allure-reporter": "^1.4.0",
    "selenium-standalone": "^6.23.0",
    "webdriverio": "^4.9.11"
  },
  "repository": {
